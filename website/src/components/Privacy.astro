---
const points = [
  {
    icon: `<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>`,
    text: "All searches happen locally on your device",
  },
  {
    icon: `<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/></svg>`,
    text: "Zero data collection — no analytics, no tracking, no telemetry",
  },
  {
    icon: `<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064"/></svg>`,
    text: "No external network requests — ever",
  },
  {
    icon: `<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/></svg>`,
    text: "100% open source — inspect every line of code on GitHub",
  },
];
---

<section id="privacy" class="py-20 sm:py-28 bg-panel/50">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
    <div
      class="w-14 h-14 rounded-2xl bg-green-100 text-green-600 flex items-center justify-center mx-auto mb-6"
    >
      <svg
        class="w-7 h-7"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
        ></path>
      </svg>
    </div>

    <h2 class="text-3xl sm:text-4xl font-bold text-ink">
      Your data stays on your device. Period.
    </h2>
    <p class="mt-4 text-lg text-muted max-w-2xl mx-auto">
      Fuzzy History Search uses only the browser's built-in History API. Nothing
      leaves your computer.
    </p>

    <div class="mt-10 grid grid-cols-1 sm:grid-cols-2 gap-4 text-left max-w-2xl mx-auto">
      {
        points.map((point) => (
          <div class="flex items-start gap-3 bg-panel rounded-xl p-4 border border-outline">
            <div class="text-green-600 mt-0.5 shrink-0">
              <Fragment set:html={point.icon} />
            </div>
            <span class="text-sm text-ink">{point.text}</span>
          </div>
        ))
      }
    </div>

    <a
      href="/fuzzy-history-search/privacy/"
      class="inline-block mt-8 text-sm text-brand hover:text-brand-deep font-medium transition-colors"
    >
      Read our full Privacy Policy &rarr;
    </a>
  </div>
</section>
